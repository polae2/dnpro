<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view1_1"
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    android:background="@drawable/page2"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageButton
            android:id="@+id/imgBtn1_1_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="32dp"
            android:layout_marginTop="75dp"
            android:background="#00000000"
            android:src="@drawable/japan" />

        <ImageButton
            android:id="@+id/imgBtn1_1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imgBtn1_1_3"
            android:layout_marginLeft="30dp"
            android:background="#00000000"
            android:src="@drawable/china" />

        <ImageButton
            android:id="@+id/imgBtn1_1_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imgBtn1_1_2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="46dp"
            android:background="#00000000"
            android:src="@drawable/america" />

        <ImageButton
            android:id="@+id/imgBtn1_1_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imgBtn1_1_3"
            android:layout_alignTop="@+id/imgBtn1_1_4"
            android:background="#00000000"
            android:src="@drawable/gita" />

        <ImageButton
            android:id="@+id/imgBtn1_1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/imgBtn1_1_4"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:src="@drawable/korea" />

    </RelativeLayout>

</LinearLayout>
