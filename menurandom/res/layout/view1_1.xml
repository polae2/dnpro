<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view1_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/page2"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        >

        <ImageButton
            android:id="@+id/imgBtn1_1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:src="@drawable/china" 
			android:layout_marginLeft="40dp"            
            />
        
	    <ImageButton
	        android:id="@+id/imgBtn1_1_3"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:background="#00000000"
	        android:layout_marginLeft="180dp"
	        android:src="@drawable/japan" />

	</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
	    android:layout_height="100dp"
	    android:layout_marginTop="5dp"
	    android:gravity="center_horizontal"
	    >
		 <ImageButton
            android:id="@+id/imgBtn1_1_1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/korea"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#00000000"            
             />   
	   
    </RelativeLayout>
    
        
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
	    >
		<ImageButton
            android:id="@+id/imgBtn1_1_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/america"
            android:background="#00000000" 
            android:layout_marginLeft="40dp"       
             />

        <ImageButton
            android:id="@+id/imgBtn1_1_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gita" 
            android:background="#00000000"
			android:layout_marginLeft="180dp"
            />
    </RelativeLayout>    
</LinearLayout>
